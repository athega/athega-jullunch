!!!5
%html{ :lang => 'sv' }
  %head
    %meta{ :charset => 'utf-8' }
    %title Athega jullunch

    / http://t.co/dKP3o1e
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1" }
    %meta{ :name => "HandheldFriendly", :content => "true" }

    / Apple
    %meta{ :name => "apple-mobile-web-app-capable", :content => "yes" }
    %meta{ :name => "apple-mobile-web-app-status-bar-style", :content => "black" }

    / Favicon
    %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon" }

    %link{ :rel => "stylesheet", :href => "/stylesheets/main.css", :type => "text/css" }

    %script{ src: '/javascripts/jquery-1.7.1.min.js' }
    :javascript

      $(function() {
        var ua    = navigator.userAgent,
            ipad = (ua.match(/iPad/i)) ? true : false;

        if(ipad === true) {
          $('a').bind({
            click: function(e) {
              sleep(1);
            }
          });
        }
      });

  %body#check_in
    .container
      .row
        .sixteen.columns
          %header
            %a{ href: "javascript:window.location.assign('/check-in')" }
              %h1#logo.remove-bottom Athega
              %h2 Stockholms nyttigaste systemutvecklare
      = yield
