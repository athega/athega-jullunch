.row.sittings
  .twelve.offset-by-four.columns
    %h1 Uppdatera sittningar
  .four.columns
    = haml :'admin/menu', :layout => false
  .twelve.columns
    .row.remove-bottom
      .one.column.alpha
        %label
          id
          %small
            %em 1130
      .three.columns
        %label
          Namn
          %small
            %em 11:30
      .one.column
        %label
          Gäster
          %small
            %em 20
      .one.column
        %label
          Reserv.
          %small
            %em 1
      .four.columns.omega
        %label
          Startdatum
          %small
            %em 2019-12-13 11:30:00 +0000

    %form{ :action => "/admin/sittings", :method => 'POST' }
      %fieldset
        .row.remove-bottom
          .one.column.alpha
            %input{ :type => 'text', :name => 'key' }
          .three.columns
            %input{ :type => 'text', :name => 'title' }
          .one.column
            %input{ :type => 'text', :name => 'number_of_guests_allowed' }
          .one.column
            %input{ :type => 'text', :name => 'number_of_reserved_seats' }
          .two.columns
            %input{ :type => 'text', :name => 'starts_at' }
          .two.columns.omega
            %input{ :type => 'submit', :value => 'Lägg till' }

    - sittings.each do |sitting|
      %form{ :action => "/admin/sittings/#{sitting.key}", :method => 'POST' }
        %fieldset
          .row.remove-bottom
            .one.column.alpha
              %input{ :type => 'text', :name => 'key', :value => sitting.key, :disabled => '' }
            .three.columns
              %input{ :type => 'text', :name => 'title', :value => sitting.title }
            .one.column
              %input{ :type => 'text', :name => 'number_of_guests_allowed', :value => sitting.number_of_guests_allowed }
            .one.column
              %input{ :type => 'text', :name => 'number_of_reserved_seats', :value => sitting.number_of_reserved_seats }
            .two.columns
              %input{ :type => 'text', :name => 'starts_at', :value => sitting.local_time }
            .two.columns.omega
              %input{ :type => 'submit', :value => 'Uppdatera' }

